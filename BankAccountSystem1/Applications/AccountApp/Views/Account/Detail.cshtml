@model AccountApp.Models.AccountOverview
@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">Account Detail</div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    @Html.Partial("_HomeAccountOverviewPartial", Model)
                </div>
            </div>
        </div>



    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <div class="tabbable-panel">
            <div class="tabbable-line">
                <ul class="nav nav-tabs ">
                    <li class="active">
                        <a href="#tab_default_1" data-toggle="tab">
                            Last Transactions
                        </a>
                    </li>
                    <li>
                        <a href="#tab_default_2" data-toggle="tab">
                            Credit Card Information
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_default_1">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered margin-top-10">
                                    <thead>
                                        <tr>
                                            <th>Detail</th>
                                            <th>Description</th>
                                            <th>Direction</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var transactionDetailInfo in Model.TransactionDetailList.Where(td => td.TransactionInfo.TransactionStatus.StatusKey == "Succeeded"))
                                        {
                                            <tr>
                                                <td>
                                                    <a href="javscript:void(0);" data-transaction-detail-id="@transactionDetailInfo.Id">
                                                        <i class="glyphicon glyphicon-search"></i>
                                                    </a>
                                                </td>
                                                <td>@transactionDetailInfo.Description</td>
                                                <td>
                                                    @if (transactionDetailInfo.TransactionDirection == AydoganFBank.AccountManagement.Api.TransactionDirection.In)
                                                    {
                                                        @:<i class="glyphicon glyphicon-arrow-up text-danger"></i>
                                                    }
                                                    else
                                                    {
                                                        @:<i class="glyphicon glyphicon-arrow-down text-success"></i>
                                                    }
                                                </td>
                                                <td>@transactionDetailInfo.TransactionInfo.Amount @Model.AssetsUnit</td>
                                                <td>@transactionDetailInfo.TransactionInfo.TransactionDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    </div>
                    <div class="tab-pane" id="tab_default_2">
                        @if (Model.CreditCard != null)
                        {
                            <div class="margin-top-10">
                                @Html.Partial("_CreditCardOverviewPartial", Model.CreditCard)

                                <div class="margin-top-10">
                                    @Html.ActionLink("Details", "Detail", "CreditCard", new { id = Model.CreditCard.Id }, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


