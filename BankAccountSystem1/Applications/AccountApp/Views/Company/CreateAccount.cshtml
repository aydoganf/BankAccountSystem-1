@using AccountApp.Utility
@model AccountApp.Models.Operation.Company.AccountCreate
@{
    ViewBag.Title = "Create";
}

<h2>Create Account</h2>
<hr />

@Html.GetUiAlertBox(ViewBag as object)
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        Create Account
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">

                @using (Html.BeginForm())
                {

                    <div class="form-horizontal">
                        
                        <div class="form-group">
                            <label class="col-md-3 control-label">Company</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    @Html.DisplayFor(x => x.CompanyName)
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-3 control-label">Account type</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    @Html.DropDownListFor(x => x.AccountTypeId, Model.AccountTypesForUI, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-4">
                                <input type="submit" class="btn btn-success" value="Create" />
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>